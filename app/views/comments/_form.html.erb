<%= form_with(model: [pet_submission, comment], url: pet_submission_comments_path(pet_submission), local: true) do |form| %>
  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, class: 'form-control' %>
  </div>

  <div>
    <%= form.submit 'Add Comment', class: 'btn btn-primary' %>
  </div>
<% end %>
