<div class="container mt-5">
  <h1 class="mb-4">Submitted Pet Searches</h1>

  <div class="row">
    <% @pet_submissions.reverse_each do |pet_submission| %>
      <div class="col-md-4 mb-4">
        <div class="card shadow">
          <div class="card-body">
            <%= link_to pet_submission_path(pet_submission) do %>
              <h5 class="card-title"><%= pet_submission.title %></h5>
            <% end %>
            <p class="card-text"><%= pet_submission.body %></p>

            <% if pet_submission.image.attached? %>
              <%= link_to pet_submission_path(pet_submission) do %>
                <%= image_tag url_for(pet_submission.image), class: 'card-img-top mt-3' %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
